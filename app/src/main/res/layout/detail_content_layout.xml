<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/contentConstraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/margin_card_view"
            android:padding="@dimen/padding_card_view" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:weightSum="90">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30" android:id="@+id/detail_fork_layout"
                    android:background="@drawable/selectable_background">

                <ImageView
                        app:srcCompat="@drawable/ic_fork"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/imageView7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:id="@+id/detail_fork_tv"
                        app:layout_constraintTop_toBottomOf="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30" android:id="@+id/detail_star_layout"
                    android:background="@drawable/selectable_background">

                <ImageView
                        app:srcCompat="@drawable/ic_star"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/detail_star_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:id="@+id/detail_star_tv"
                        app:layout_constraintTop_toBottomOf="@+id/detail_star_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30" android:id="@+id/detail_issue_layout"
                    android:background="@drawable/selectable_background">

                <ImageView
                        app:srcCompat="@drawable/ic_issue"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:id="@+id/detail_issue_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:id="@+id/detail_issue_tv"
                        app:layout_constraintTop_toBottomOf="@+id/detail_issue_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                        android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>